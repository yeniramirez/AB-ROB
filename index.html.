import tkinter as tk
import time
import serial

# Conexión con Arduino (ajusta el puerto y la velocidad según tu configuración)
arduino = serial.Serial('COM3', 9600)  # Cambia 'COM3' al puerto correcto en tu computadora

# Funciones para cada movimiento
def adelante():
    arduino.write(b'F')
    status_label.config(text="B.R.O.B. se mueve hacia adelante")

def atras():
    arduino.write(b'B')
    status_label.config(text="B.R.O.B. se mueve hacia atrás")

def derecha():
    arduino.write(b'R')
    status_label.config(text="B.R.O.B. se mueve a la derecha")

def izquierda():
    arduino.write(b'L')
    status_label.config(text="B.R.O.B. se mueve a la izquierda")

def diagonal_ad_der():
    arduino.write(b'FR')
    status_label.config(text="B.R.O.B. se mueve en diagonal adelante-derecha")

def diagonal_ad_izq():
    arduino.write(b'FL')
    status_label.config(text="B.R.O.B. se mueve en diagonal adelante-izquierda")

def diagonal_atras_der():
    arduino.write(b'BR')
    status_label.config(text="B.R.O.B. se mueve en diagonal atrás-derecha")

def diagonal_atras_izq():
    arduino.write(b'BL')
    status_label.config(text="B.R.O.B. se mueve en diagonal atrás-izquierda")

def giro_horario():
    arduino.write(b'CW')
    status_label.config(text="B.R.O.B. gira en sentido horario")

def giro_antihorario():
    arduino.write(b'CCW')
    status_label.config(text="B.R.O.B. gira en sentido antihorario")

def encender():
    arduino.write(b'ON')
    status_label.config(text="B.R.O.B. encendido")

def apagar():
    arduino.write(b'OFF')
    status_label.config(text="B.R.O.B. apagado")

def pausar():
    arduino.write(b'PAUSE')
    status_label.config(text="B.R.O.B. en pausa")

# Configuración de la ventana principal
ventana = tk.Tk()
ventana.title("Control de B.R.O.B.")
ventana.geometry("400x500")

# Etiqueta de estado
status_label = tk.Label(ventana, text="Estado: Inactivo", font=("Arial", 12))
status_label.pack(pady=10)

# Botones de control
boton_encender = tk.Button(ventana, text="Encender", command=encender, width=15, height=2)
boton_encender.pack(pady=5